@{
    ViewData["Title"] = "SignIn";
    Layout = "";
}

<head>
    <title>Sign in</title>
    <link rel="stylesheet" type="text/css" href="~/css/sign-in.css" />
</head>
<body>
    <div class="wrapper">
        <div class="panel">
            <form method="post" asp-controller="user" asp-action="signin">
                <input type="text" placeholder="Username" class="username-textbox" />
                <input type="password" placeholder="Password" class="password-textbox" />
                <button type="submit" class="submit-button">Sign in</button>
            </form>
        </div>
    </div>
</body>